<body>
    
    <div class="row align-items-center bg-white py-3 px-lg-5">
        <div class="col-lg-4">
            <a href="/api" class="navbar-brand p-0 d-none d-lg-block">
                <h1 class="m-0 display-4 text-uppercase text-primary text-secondary font-weight-normal">
                    <span>Yangiliklar.uz</span>
                </h1>
            </a>
        </div>
    </div>
    <!-- Topbar End -->


    <!-- Navbar Start -->
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-2 py-lg-0 px-lg-5">
            <div class="collapse navbar-collapse justify-content-between px-0 px-lg-3" id="navbarCollapse">
                <div class="navbar-nav mr-auto py-0">
                    <a href="/api" class="nav-item nav-link active">Yangiliklar</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"
                            aria-expanded="false">Turkumlar</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a href="/api/local" class="dropdown-item">O'zbekiston</a>
                            <a href="/api/global" class="dropdown-item">Jahon</a>
                            <a href="/api/sport" class="dropdown-item">Sport</a>
                            <a href="/api/texnologiya" class="dropdown-item">Texnologiya</a>
                        </div>
                    </div>
                    <a href="/api/latestnews" class="nav-item nav-link">So'ngi yangiliklar</a>
                    <a href="/api/contact" class="nav-item nav-link">Aloqa</a>
                </div>

                {{#if token}}
                <a href="/api/logout">
                    <button class="login-button">Chiqish</button>
                </a>
                {{else}}
                <a href="/api/login">
                    <button class="login-button">Kirish</button>
                </a>
                {{/if}}

                {{#if token}}
                {{#if user}}
                <div class="profile-icon">
                    <a class="btn bg-warning rounded-circle ms-3" href="/api/profile/{{userId}}">
                        <small class="fa fa-user"> </small>
                    </a>
                </div>
                {{/if}}
                {{/if}}
            </div>
        </nav>
    </div>

    <div class="Add-News">
        <div class="addnews">
            <form action="/api/updatenews/{{news._id}}" method="post">
                <h1>Yangilikni yangilash</h1>
                <label>Sarlavha</label>
                <input name="title" type="text" value="{{news.title}}">
                <label>Mazmuni</label>
                <textarea class="form-control" name="content" id="floatingTextarea2Disabled"
                    style="height: 100px">{{news.content}}</textarea>
                <label>Rasm</label>
                <input name="image" type="url">
                <label>Yangiliklar turi</label>
                <select class="form-select" id="category" name="category">
                    <option value="" disabled selected>Yangiliklar turini tanlang</option>
                    <option value="O'zbekiston">O'zbekiston</option>
                    <option value="Jahon">Jahon</option>
                    <option value="Sport">Sport</option>
                    <option value="Texnologiya">Texnologiya</option>
                </select>

                <button class="add-button" type="submit">Yangilash</button>
                <button class="cancel-button" type="reset"><a class="cansel" href="/api">Bekor Qilish</a></button>
            </form>
        </div>
    </div>

    <div class="container-fluid py-4 px-sm-3 px-md-5" style="background: #111111;"></div>

</body>