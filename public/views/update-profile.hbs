    <style>
        /* Profil kartasi */
        .profile-card {
            width: 500px;
            margin: 50px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
        }

        /* Profil rasmi */
        .profile-img {
            width: 150px;
            height: 150px;
            margin: 0 auto;
            overflow: hidden;
            border-radius: 50%;
            border: 3px solid #007bff;
        }

        .profile-img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Profil ma'lumotlari */
        .profile-info {
            margin-top: 15px;
        }

        .profile-name {
            font-size: 1.7em;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        label {
            display: block;
            text-align: left;
            font-weight: 600;
            margin: 10px 0 5px;
            color: #555;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            color: #333;
        }

        /* Tugmalar */
        .profile-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 15px;
        }

        .profile-buttons .btn {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .profile-buttons .btn:hover {
            background-color: #0056b3;
        }

        /* Buttonlarga link qo'shish uchun */
        .profile-buttons .btn.cancel {
            background-color: #6c757d;
        }

        .profile-buttons .btn.cancel:hover {
            background-color: #5a6268;
        }
    </style>

<body>
    <div class="row align-items-center bg-white py-3 px-lg-5">
        <div class="col-lg-4">
            <a href="/api" class="navbar-brand p-0 d-none d-lg-block">
                <h1 class="m-0 display-4 text-uppercase text-primary text-secondary font-weight-normal">
                    <span>Yangiliklar.uz</span>
                </h1>
            </a>
        </div>
    </div>
    <!-- Topbar End -->


    <!-- Navbar Start -->
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-2 py-lg-0 px-lg-5">
            <div class="collapse navbar-collapse justify-content-between px-0 px-lg-3" id="navbarCollapse">
                <div class="navbar-nav mr-auto py-0">
                    <a href="/api" class="nav-item nav-link active">Yangiliklar</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"
                            aria-expanded="false">Turkumlar</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a href="/api/local" class="dropdown-item">O'zbekiston</a>
                            <a href="/api/global" class="dropdown-item">Jahon</a>
                            <a href="/api/sport" class="dropdown-item">Sport</a>
                            <a href="/api/texnologiya" class="dropdown-item">Texnologiya</a>
                        </div>
                    </div>
                    <a href="/api/latestnews" class="nav-item nav-link">So'ngi yangiliklar</a>
                    <a href="/api/contact" class="nav-item nav-link">Aloqa</a>
                </div>

                {{#if token}}
                <a href="/api/add">
                    <button class="addnews-button">Yangiliklar Qo'shish</button>
                </a>
                {{/if}}

                {{#if token}}
                <a href="/api/logout">
                    <button class="login-button">Chiqish</button>
                </a>
                {{else}}
                <a href="/api/login">
                    <button class="login-button">Kirish</button>
                </a>
                {{/if}}
            </div>
        </nav>
    </div>

    <div class="profile-card">
        <div class="profile-img">
            <img src="{{user.avatar}}" alt="Profile Image">
        </div>
        <div class="profile-info">
            <h3 class="profile-name">{{user.username}}</h3>
            <form action="/api/updateprofile/{{userId}}" method="POST">
                <label>Username</label>
                <input name="username" type="text" value="{{user.username}}">
                <label>Email</label>
                <input name="email" type="email" value="{{user.email}}">
                <label>Password</label>
                <input name="password" type="password">
                <label>Rasm</label>
                <input name="avatar" type="url">
                <div class="profile-buttons">
                    <button type="submit" class="btn">Yangilash</button>
                    <button type="button" class="btn cancel"
                        onclick="window.location.href='/api/profile/{{userId}}'">Bekor Qilish</button>
                </div>
            </form>
        </div>
    </div>

    <div class="container-fluid py-4 px-sm-3 px-md-5" style="background: #111111;"></div>
</body>