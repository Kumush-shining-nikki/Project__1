<body>
    <!-- Topbar Start -->
    <div class="row align-items-center bg-white py-3 px-lg-5">
        <div class="col-lg-4">
            <a href="/api" class="navbar-brand p-0 d-none d-lg-block">
                <h1 class="m-0 display-4 text-uppercase text-primary text-secondary font-weight-normal">
                    <span>Yangiliklar.uz</span>
                </h1>
            </a>
        </div>
    </div>
    <!-- Topbar End -->


    <!-- Navbar Start -->
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-2 py-lg-0 px-lg-5">
            <div class="collapse navbar-collapse justify-content-between px-0 px-lg-3" id="navbarCollapse">
                <div class="navbar-nav mr-auto py-0">
                    <a href="/api" class="nav-item nav-link active">Yangiliklar</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"
                            aria-expanded="false">Turkumlar</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a href="/api/local" class="dropdown-item">O'zbekiston</a>
                            <a href="/api/global" class="dropdown-item">Jahon</a>
                            <a href="/api/sport" class="dropdown-item">Sport</a>
                            <a href="/api/texnologiya" class="dropdown-item">Texnologiya</a>
                        </div>
                    </div>
                    <a href="/api/latestnews" class="nav-item nav-link">So'ngi yangiliklar</a>
                    <a href="/api/contact" class="nav-item nav-link">Aloqa</a>
                </div>

                {{#if token}}
                <a href="/api/add">
                    <button class="addnews-button">Yangiliklar Qo'shish</button>
                </a>
                {{/if}}

                {{#if token}}
                <a href="/api/logout">
                    <button class="login-button">Chiqish</button>
                </a>
                {{else}}
                <a href="/api/login">
                    <button class="login-button">Kirish</button>
                </a>
                {{/if}}

                {{#if token}}
                {{#if user}}
                <div class="profile-icon">
                    <a class="btn bg-warning rounded-circle ms-3" href="/api/profile/{{userId}}">
                        <small class="fa fa-user"> </small>
                    </a>
                </div>
                {{/if}}
                {{/if}}

            </div>
        </nav>
    </div>

    <style>

       .container {
        margin-top: 50px;
            max-width: 1000px;
            width: 100%;
            background-color: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
            font-size: 30px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: none;
        }

        th {
            background-color: #f7f7f7;
            color: #555;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 16px;
            font-size: 18px;
            border-bottom: 2px solid #ddd;
        }

        td {
            padding: 16px;
            text-align: left;
            font-size: 18px;
            color: #333;
            border-bottom: 1px solid #eee;
        }

        tr:hover td {
            background-color: #f0f0f0;
        }

        img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .delete-btn {
            background-color: #e74c3c;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .delete-btn:hover {
            background-color: #c0392b;
            transform: scale(1.05);
        }

        .delete-btn:active {
            transform: scale(0.95);
        }
    </style>

    <div class="container">
        <h2>Foydalanuvchilar</h2>
        <table>
            <thead>
                <tr>
                    <th>Rasm</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Harakat</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td><img src={{avatar}} alt="Avatar 1"></td>
                    <td><a href="/api/oneuser/{{_id}}">{{username}}</a></td>
                    <td>{{email}}</td>
                    <td>
                        <form action="/api/deleteuser/{{_id}}" method="post">
                        <button class="delete-btn" type="submit">O'chirish</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
                <!-- Qo'shimcha foydalanuvchilarni shu yerda qo'shishingiz mumkin -->
            </tbody>
        </table>
    </div>



    <div class="container-fluid py-4 px-sm-3 px-md-5" style="background: #111111;"></div>

</body>