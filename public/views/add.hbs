        {{#if addNewsError}}
    <div id="alert-message" class="alert alert-danger d-flex align-items-center alert-dismissible fade show"
        role="alert">
        <div class="alert-message">
            {{addNewsError}}
        </div>
        <button type="button" class="custom-btn-close" aria-label="Close"></button>
    </div>
    {{/if}}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const closeButton = document.querySelector('.custom-btn-close');
            const alertMessage = document.getElementById('alert-message');

            if (closeButton && alertMessage) {
                closeButton.addEventListener('click', function () {
                    alertMessage.classList.remove('show'); // Bootstrap klassini olib tashlash
                    alertMessage.classList.add('fade'); // Fade klassini qo'shish
                    setTimeout(function () {
                        alertMessage.style.display = 'none'; // Xabarni yashirish
                    }, 150); // CSS transition vaqti bilan mos keladigan delay
                });
            }
        });
    </script>

  <div class="Add-News">
    <div class="addnews">
      <form action="/api/add" method="post">
        <h1>Yangilik qo'shish</h1>
        <label>Sarlavha</label>
        <input name="title" type="text" required="text">
        <label>Mazmuni</label>
        <textarea class="form-control" name="content" placeholder="Leave a comment here" id="floatingTextarea2Disabled"
          style="height: 100px" required="text"></textarea>
        <label>Rasm</label>
        <input name="image" type="url" required="url">
        <label>Yangiliklar turi</label>
        <select class="form-select" id="category" name="category" required>
          <option value="" disabled selected>Yangiliklar turini tanlang</option>
          <option value="O'zbekiston">O'zbekiston</option>
          <option value="Jahon">Jahon</option>
          <option value="Sport">Sport</option>
          <option value="Texnologiya">Texnologiya</option>
        </select>

        <button class="add-button" type="submit">Yangilik qo'shish</button>
        <button class="cancel-button" type="reset"><a class="cansel" href="/api">Bekor Qilish</a></button>
      </form>
    </div>

    <div class="container-fluid py-4 px-sm-3 px-md-5" style="background: #111111;">
    </div>
