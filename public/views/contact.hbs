    <style>
        /* Resetting default styles */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        /* Container styling to center the card */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full viewport height */
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2); /* Gradient background */
        }

        /* Contact card styling */
        .contact-card {
            background: #ffffff;
            border-radius: 15px; /* More rounded corners */
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1); /* Deeper shadow */
            padding: 40px; /* Increased padding */
            max-width: 600px; /* Max width of the card */
            width: 100%;
            text-align: center;
            margin: 100px auto;
            position: relative;
            overflow: hidden; /* Hide overflow for smooth effect */
            transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transition for effects */
        }

        /* Card hover effect */
        .contact-card:hover {
            transform: translateY(-10px); /* More pronounced lift on hover */
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2); /* Deeper shadow on hover */
        }

        /* Decorative elements for the card */
        .contact-card::before {
            content: "";
            position: absolute;
            top: -50%;
            left: 50%;
            width: 200%;
            height: 200%;
            background: rgba(0, 123, 255, 0.1); /* Light blue overlay */
            border-radius: 50%;
            transform: translate(-50%, -50%);
            z-index: 0;
        }

        .contact-card h2 {
            font-size: 32px; /* Increased font size */
            color: #333;
            margin-bottom: 20px;
            font-weight: 600; /* Bold header */
            z-index: 1; /* Ensure header is above the overlay */
        }

        /* Contact info styling */
        .contact-info {
            display: flex;
            flex-direction: column;
            gap: 15px; /* Adjusted gap */
            z-index: 1; /* Ensure info items are above the overlay */
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 20px; /* Space between icon and text */
            font-size: 18px; /* Font size */
            color: #555;
        }

        .contact-item i {
            font-size: 24px; /* Icon size */
            color: #007bff;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .contact-card {
                padding: 20px; /* Reduced padding for smaller screens */
            }

            .contact-card h2 {
                font-size: 24px; /* Reduced font size for smaller screens */
            }

            .contact-item {
                font-size: 16px; /* Reduced font size for smaller screens */
            }
        }

        /* Font Awesome icons (add this if using Font Awesome) */
        @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css');
    </style>
